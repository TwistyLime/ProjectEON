{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.hover_bike.movement": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [ "idle" ],
          "transitions": [
            { "moving": "query.is_moving" }
          ]
        },
        "moving": {
          "animations": [ "fly" ],
          "transitions": [
            { "default": "!query.is_moving" }
          ]
        }
      }
    }
  }
}
